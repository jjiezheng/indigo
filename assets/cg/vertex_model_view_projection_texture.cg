struct VOutput {
	float4 position : POSITION;
  float2 texCoord : TEXCOORD0;
};

VOutput vmain(float4 position : POSITION,
              float2 texCoord : TEXCOORD0,
	          uniform float4x4 modelViewProjection) {

	VOutput OUT;
	OUT.position = mul(modelViewProjection, position);
  OUT.texCoord = texCoord;
  return OUT;
}